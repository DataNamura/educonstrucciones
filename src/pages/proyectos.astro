---
import Layout from '../layouts/Layout.astro';

const title = "Proyectos de Construcción y Reformas en Tenerife";
const description = "Descubra nuestro portfolio de proyectos de construcción y reformas en Tenerife. Viviendas, locales comerciales y rehabilitaciones realizadas con excelencia y profesionalidad.";

const categories = [
  "Todos",
  "Construcción",
  "Reformas",
  "Especialidades",
  "Diseño de Interiores"
];

const projects = [
  {
    title: "Residencial Los Álamos",
    description: "Complejo residencial de lujo con 24 viviendas",
    image: "https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?auto=format&fit=crop&q=80",
    category: "Construcción",
    year: "2023",
    details: [
      "24 viviendas de lujo",
      "Zonas comunes",
      "Piscina",
      "Jardines"
    ]
  },
  {
    title: "Reforma Integral Ático",
    description: "Transformación completa de un ático en el centro de la ciudad",
    image: "https://images.unsplash.com/photo-1600607687644-c7171b42498f?auto=format&fit=crop&q=80",
    category: "Reformas",
    year: "2023",
    details: [
      "200m² reformados",
      "Terraza panorámica",
      "Domótica integrada",
      "Diseño moderno"
    ]
  },
  {
    title: "Edificio Smart Office",
    description: "Oficinas inteligentes con tecnología de última generación",
    image: "https://images.unsplash.com/photo-1497366754035-f200968a6e72?auto=format&fit=crop&q=80",
    category: "Especialidades",
    year: "2022",
    details: [
      "1500m² de oficinas",
      "Sistema domótico",
      "Eficiencia energética",
      "Parking inteligente"
    ]
  },
  {
    title: "Centro Comercial Plaza",
    description: "Renovación completa de centro comercial",
    image: "https://images.unsplash.com/photo-1555636222-cae831e670b3?auto=format&fit=crop&q=80",
    category: "Construcción",
    year: "2022",
    details: [
      "30 locales comerciales",
      "Food court",
      "Parking subterráneo",
      "Zona de ocio"
    ]
  },
  {
    title: "Villa Mediterránea",
    description: "Construcción de villa de lujo con vistas al mar",
    image: "https://images.unsplash.com/photo-1613490493576-7fde63acd811?auto=format&fit=crop&q=80",
    category: "Construcción",
    year: "2023",
    details: [
      "450m² construidos",
      "Piscina infinity",
      "Jardín tropical",
      "Domótica"
    ]
  },
  {
    title: "Hotel Boutique",
    description: "Reforma integral de edificio histórico",
    image: "https://images.unsplash.com/photo-1582719508461-905c673771fd?auto=format&fit=crop&q=80",
    category: "Reformas",
    year: "2022",
    details: [
      "15 habitaciones",
      "Restaurante",
      "Spa",
      "Terraza"
    ]
  },
  {
    title: "Casa Sostenible",
    description: "Vivienda unifamiliar con certificación energética A",
    image: "https://images.unsplash.com/photo-1571055107559-3e67626fa8be?auto=format&fit=crop&q=80",
    category: "Construcción",
    year: "2023",
    details: [
      "Paneles solares",
      "Sistema de recuperación de agua",
      "Aislamiento térmico",
      "Domótica"
    ]
  },
  {
    title: "Loft Industrial",
    description: "Transformación de nave industrial en loft moderno",
    image: "https://images.unsplash.com/photo-1574739782594-db4ead022697?auto=format&fit=crop&q=80",
    category: "Reformas",

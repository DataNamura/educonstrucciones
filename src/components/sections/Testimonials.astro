---
import SectionLayout from "../../layouts/SectionLayout.astro";

const testimonials = [
  {
    name: "Ana García",
    role: "Propietaria de Vivienda",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?auto=format&fit=crop&q=80",
    quote: "La atención al detalle y profesionalidad del equipo superó todas nuestras expectativas. Nuestro nuevo hogar es exactamente como lo soñamos.",
    rating: 5
  },
  {
    name: "Carlos Martínez",
    role: "Gerente de Proyecto",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?auto=format&fit=crop&q=80",
    quote: "La capacidad de adaptación y solución de problemas del equipo fue excepcional. Cumplieron con los plazos y el presupuesto acordado.",
    rating: 5
  },
  {
    name: "Laura Sánchez",
    role: "Arquitecta",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?auto=format&fit=crop&q=80",
    quote: "Como profesional del sector, valoro enormemente la calidad técnica y el compromiso con la excelencia que demuestra esta constructora.",
    rating: 5
  }
];
---

<SectionLayout
  id="testimonials"
  title="Testimonios"
  subtitle="Lo que dicen nuestros clientes sobre nosotros"
  className="bg-gray-50"
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {testimonials.map(testimonial => (
      <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="flex items-center gap-4 mb-6">
          <img
            src={testimonial.image}
            alt={testimonial.name}
            class="w-16 h-16 rounded-full object-cover"
          />
          <div>
            <h3 class="font-semibold text-gray-900">{testimonial.name}</h3>
            <p class="text-sm text-gray-600">{testimonial.role}</p>
          </div>
        </div>

        <div class="mb-6">
          {[...Array(testimonial.rating)].map(() => (
            <span class="text-yellow-400">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 inline"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                />
              </svg>
            </span>
          ))}
        </div>

        <blockquote class="text-gray-600 italic">"{testimonial.quote}"</blockquote>
      </div>
    ))}
  </div>
</SectionLayout>

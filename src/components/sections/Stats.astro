---
import SectionLayout from "../../layouts/SectionLayout.astro";

const stats = [
  {
    number: "15+",
    label: "Años de Experiencia",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    number: "500+",
    label: "Proyectos Completados",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  },
  {
    number: "98%",
    label: "Clientes Satisfechos",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
    </svg>`
  },
  {
    number: "50+",
    label: "Profesionales",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  }
];
---

<SectionLayout
  id="stats"
  title="Nuestros Números"
  subtitle="Resultados que respaldan nuestra trayectoria"
  className="py-20 bg-transparent"
>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
    {stats.map(stat => (
      <div class="text-center">
        <div class="bg-white/10 rounded-2xl p-6 backdrop-blur-lg hover:bg-white/20 transition-colors duration-300">
          <div class="flex justify-center mb-4 text-white/90">
            <Fragment set:html={stat.icon} />
          </div>
          <div class="text-4xl font-bold mb-2">{stat.number}</div>
          <div class="text-sm text-white/80">{stat.label}</div>
        </div>
      </div>
    ))}
  </div>
</SectionLayout>

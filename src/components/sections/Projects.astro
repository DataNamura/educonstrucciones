---
import SectionLayout from "../../layouts/SectionLayout.astro";

// Solo mostramos los 6 proyectos destacados en la landing
const projects = [
  {
    title: "Residencial Los Álamos",
    description: "Complejo residencial de lujo con 24 viviendas",
    image: "https://images.unsplash.com/photo-1545324418-cc1a3fa10c00?auto=format&fit=crop&q=80",
    category: "Construcción",
    size: "large",
    details: [
      "24 viviendas de lujo",
      "Zonas comunes",
      "Piscina",
      "Jardines"
    ]
  },
  {
    title: "Reforma Integral Ático",
    description: "Transformación completa de un ático en el centro de la ciudad",
    image: "https://images.unsplash.com/photo-1600607687644-c7171b42498f?auto=format&fit=crop&q=80",
    category: "Reformas",
    size: "small",
    details: [
      "200m² reformados",
      "Terraza panorámica",
      "Domótica integrada",
      "Diseño moderno"
    ]
  },
  {
    title: "Edificio Smart Office",
    description: "Oficinas inteligentes con tecnología de última generación",
    image: "https://images.unsplash.com/photo-1497366754035-f200968a6e72?auto=format&fit=crop&q=80",
    category: "Especialidades",
    size: "medium",
    details: [
      "1500m² de oficinas",
      "Sistema domótico",
      "Eficiencia energética",
      "Parking inteligente"
    ]
  },
  {
    title: "Centro Comercial Plaza",
    description: "Renovación completa de centro comercial",
    image: "https://images.unsplash.com/photo-1555636222-cae831e670b3?auto=format&fit=crop&q=80",
    category: "Construcción",
    size: "medium",
    details: [
      "30 locales comerciales",
      "Food court",
      "Parking subterráneo",
      "Zona de ocio"
    ]
  },
  {
    title: "Villa Mediterránea",
    description: "Construcción de villa de lujo con vistas al mar",
    image: "https://images.unsplash.com/photo-1613490493576-7fde63acd811?auto=format&fit=crop&q=80",
    category: "Construcción",
    size: "large",
    details: [
      "450m² construidos",
      "Piscina infinity",
      "Jardín tropical",
      "Domótica"
    ]
  },
  {
    title: "Hotel Boutique",
    description: "Reforma integral de edificio histórico",
    image: "https://images.unsplash.com/photo-1582719508461-905c673771fd?auto=format&fit=crop&q=80",
    category: "Reformas",
    size: "small",
    details: [
      "15 habitaciones",
      "Restaurante",
      "Spa",
      "Terraza"
    ]
  }
];
---

<SectionLayout 
  id="projects"
  title="Proyectos Destacados"
  subtitle="Descubre algunos de nuestros trabajos más representativos"
  className="py-20 bg-transparent"
>
  <div class="grid grid-cols-1 md:grid-cols-6 gap-6 auto-rows-[250px]">
    {projects.map(project => {
      const sizeClasses = {
        small: "md:col-span-2 md:row-span-1",
        medium: "md:col-span-3 md:row-span-1",
        large: "md:col-span-4 md:row-span-2"
      }[project.size];

      return (
        <div class={`group relative overflow-hidden rounded-2xl shadow-lg bg-white ${sizeClasses}`}>
          <div class="absolute inset-0">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
          </div>

          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-6 group-hover:translate-y-0 transition-transform duration-300">
              <span class="inline-block px-3 py-1 bg-blue-600 text-white text-sm rounded-full mb-3">
                {project.category}
              </span>
              <h3 class="text-xl md:text-2xl font-bold text-white mb-2">{project.title}</h3>
              <p class="text-gray-300 text-sm mb-4">{project.description}</p>
              
              <ul class="space-y-2">
                {project.details.map(detail => (
                  <li class="text-gray-300 text-sm flex items-center">
                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500 mr-2"></span>
                    {detail}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      );
    })}
  </div>

  <div class="mt-8 text-center">
    <a 
      href="/proyectos" 
      class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300"
    >
      Ver Todos los Proyectos
    </a>
  </div>
</SectionLayout>

<style>
  .grid {
    grid-auto-flow: dense;
  }
</style>

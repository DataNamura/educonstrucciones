---
interface Props {
  title: string;
  subtitle?: string;
  id?: string;
  className?: string;
}

const { title, subtitle, id, className = "" } = Astro.props;
---

<section id={id} class={`py-24 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold mb-4 text-gray-900">{title}</h2>
      {subtitle && <p class="text-lg text-gray-600">{subtitle}</p>}
    </div>
    <slot />
  </div>
</section>
